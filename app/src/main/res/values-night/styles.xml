<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BackgroundTheme">
        <item name="android:background">@color/backgroundDark</item>
        <item name="android:padding">@dimen/container_padding</item>
    </style>

    <style name="TextView">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewRecyclerView">
        <item name="android:textSize">@dimen/text_size_rv</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="FloatActionButton">
        <item name="android:tint">#28abb9</item>
        <item name="android:backgroundTint">#000839</item>
    </style>
</resources>